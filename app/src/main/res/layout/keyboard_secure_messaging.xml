<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="4dp">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• Toolbar â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_keyboard_arrow_left"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Secure Messaging"
            android:textSize="14sp"
            android:textColor="@color/tv_text"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />

        <!-- Nav tabs -->
        <TextView
            android:id="@+id/btn_compose"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="âœï¸"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_inbox"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="ðŸ“¥"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:text="â"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Thin divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• State Flipper â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- â”€â”€â”€ State 0: NOT LOGGED IN â”€â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Not logged in"
                android:textSize="14sp"
                android:textColor="@color/tv_text"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open the app â†’ ðŸ”‘ Secure Messaging to login or register first."
                android:textSize="12sp"
                android:textColor="#757575"
                android:gravity="center"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- â”€â”€â”€ State 1: COMPOSE â”€â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <!-- Instruction -->
            <TextView
                android:id="@+id/tv_compose_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type a username in the text field, then tap Search."
                android:textSize="11sp"
                android:textColor="#757575"
                android:paddingBottom="4dp" />

            <!-- Search button -->
            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="ðŸ” Search user (reads text field)"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <!-- Search results / conversation create area -->
            <TextView
                android:id="@+id/tv_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_text"
                android:paddingTop="4dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_start_conversation"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Start Conversation"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

            <!-- Message compose area (visible after conversation is selected) -->
            <LinearLayout
                android:id="@+id/compose_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="4dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <TextView
                    android:id="@+id/tv_compose_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Messaging: ..."
                    android:textSize="12sp"
                    android:textColor="@color/tv_text"
                    android:textStyle="bold"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear the text field, type your message, then tap Send."
                    android:textSize="10sp"
                    android:textColor="#757575"
                    android:paddingBottom="2dp" />

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="ðŸ”’ Encrypt + Send"
                    android:textAllCaps="false"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_send_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/tv_text"
                    android:paddingTop="2dp" />

                <!-- Obfuscated output preview -->
                <ScrollView
                    android:id="@+id/scroll_obfuscated"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:background="#F5F5F5"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_obfuscated_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/tv_text"
                        android:fontFamily="monospace" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <!-- â”€â”€â”€ State 2: INBOX â”€â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“¥ Inbox"
                    android:textSize="13sp"
                    android:textColor="@color/tv_text"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_refresh_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="â†» Refresh"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    android:minWidth="56dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:id="@+id/inbox_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/tv_inbox_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/tv_text"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- â”€â”€â”€ State 3: DECRYPT RESULT â”€â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”“ Decrypted Message"
                android:textSize="13sp"
                android:textColor="@color/tv_text"
                android:textStyle="bold"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tv_decrypt_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#757575"
                android:paddingBottom="2dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#F5F5F5"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_decrypted_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/tv_text"
                    android:hint="Decrypting..." />
            </ScrollView>

            <Button
                android:id="@+id/btn_back_to_inbox"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="â† Back to Inbox"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_decrypt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/tv_text"
                android:paddingTop="2dp" />
        </LinearLayout>

    </ViewFlipper>

</LinearLayout>
